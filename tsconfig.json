{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2019"
  },
  "include": ["src/**/*"]
}
